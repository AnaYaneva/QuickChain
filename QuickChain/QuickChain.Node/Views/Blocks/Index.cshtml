@using QuickChain.Model;
@model IEnumerable<Block>
<h2>Blocks</h2>

    <div class="container-table100">
        <div class="wrap-table100">
            <div class="table100 ver3 m-b-110">
                <div class="table100-head">
                    <table>
                        <thead>
                            <tr>
                                <th class="column1">Block height</th>
                                <th class="column2">Transactions count</th>
                                <th class="column3">Time</th>
                            </tr>
                        </thead>
                    </table>
                </div>

                <div class="table100-body js-pscroll ps ps--active-y">
                    <table>
                        <tbody>
                            @foreach (Block block in this.Model)
                            {
                                <tr>
                                    <td class="column1"><a asp-area="" asp-controller="Blocks" asp-action="Block" asp-route-id="@block.Height">@block.Height</a></td>
                                    <td class="column2"><a asp-area="" asp-controller="Blocks" asp-action="Transactions" asp-route-id="@block.Height">@block.Transactions.Count</a></td>
                                    <td class="column3">@block.TimeStamp.Date</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                    @*<div class="ps__rail-y" style="top: 0px; height: 585px; right: 5px;">
                            <div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 293px;">
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
    </div>

<script src="/js/wallet.js"></script>